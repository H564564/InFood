<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E5E5E5">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/upperr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/upperr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/upperrr"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/upperr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <View
            android:id="@+id/upperrrr"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/memberdiv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upperr" />


        <View
            android:id="@+id/upperrrr1"
            android:layout_width="352dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/word5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upperrrr" />

        <View
            android:id="@+id/upperrrr2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upperrrr1" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="@drawable/unknown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="31dp"
            android:layout_height="41dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="35"
            android:textColor="#FF0000"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@+id/upperr"
            app:layout_constraintHorizontal_bias="0.622"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/upperr" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="熱門商品"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/upperr"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upperrrr2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/text8">


            <ImageView
                android:id="@+id/recommendation1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                app:srcCompat="@drawable/promotion1"   />

            <ImageView
                android:id="@+id/recommendation2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                app:srcCompat="@drawable/promotion2"  />

            <ImageView
                android:id="@+id/recommendation3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion3"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion4"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion5"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion6"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation7"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion7"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation8"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion8"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation9"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion9"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/recommendation10"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/promotion10"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>